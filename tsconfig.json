{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "vite/client",
      "cypress",
      "node"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
      /* "@io-boxies/js-lib": ["node_modules/@io-boxies/js-lib"] */
    },
    "rootDirs": [
      "src/"
    ] /* Allow multiple folders to be treated as one when resolving modules. */,
    "lib": [
      "esnext",
      "dom",
      "es5",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "test/**/*.ts",
    "test/**/*.tsx",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src-back"
  ]
}